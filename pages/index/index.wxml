<view class="container">
  <view class="logo">
    <image src="/asset/imgs/logo.png" mode="aspectFit" />
  </view>
  <view class="nav-list">
    <view class="nav-item" data-index='{{index}}' bindtap="nav" wx:for="{{navList}}">
      <image class="nav-icon" src="{{item.icon}}" mode="aspectFill" />
      <view class="nav-title">{{item.title}}</view>
    </view>
  </view>
  <view class="today-course">
    <view class="course-option">
      <view class="option-title">今日课表</view>
      <view class="option-time">15周 周一</view>
    </view>
    <view class="course-box">
      <image class="empty-img" src="/asset/imgs/empty.png" mode="aspectFill" />
      <view class="empty-title">今天没有课啦</view>
    </view>
  </view>
</view>